extends layout

block content
  div(layout='column' layout-align='center center')
    h1=title
    md-content(layout-padding='')
      div
        form(name='loginForm')
          div(layout='column')
            md-input-container.md-block
              label Username
              input(ng-model='user.username')
            md-input-container.md-block
              label Password
              input(ng-model='user.password')
            md-button.md-raised.md-primary Login
