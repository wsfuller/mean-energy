html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='cache-control', content='max-age=259200')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge,chrome=1')
    meta(name='HandheldFriendly', content='true')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
    meta(name='description', content='MEAN Energy is a CRUD application to find the energy drink right for you')
    meta(name='keywords', content='mongodb, expressjs, angularjs, node, energy drinks, javascript, educational')
    meta(property='og:site_name', content='MEAN Energy')
