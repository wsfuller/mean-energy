      md-content
        md-toolbar.md-hue-2
          .md-toolbar-tools
            .container
              div(layout='row' layout-align='space-between center')
                .navbar-left
                  a(href='/', layout='row', layout-align='center center')
                    img.image-responsive.logo(src='http://placehold.it/75x75')
                    h2.logo-text MEAN Energy
                .navbar-right
                  md-button(href='/beverages', aria-label='Beverages') Beverages
                  md-button(href='/about', aria-label='About') About
                  md-button(href='/users/login') Login
                  md-button(href='/users/register') Register

    //!= messages()
    block content


    script(src='/javascripts/build/vendor-scripts.min.js')
